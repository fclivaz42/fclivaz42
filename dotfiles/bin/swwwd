#!/bin/bash

# This script will randomly go through the files of a directory, setting it
# up as the wallpaper at regular intervals

if [[ $# -lt 1 ]] || [[ ! -d $1   ]]; then
	echo "Usage:
	$0 <dir containing images>"
	exit 1
fi

export SWWW_TRANSITION_FPS=120
export SWWW_TRANSITION_STEP=90
function ref {
	declare -a array=("wipe" "wave" "any" "outer")
	r=$((RANDOM % ${#array[@]}))
	printf "%s" "${array[$r]}"
}

function fld {
	if [[ $((1 + $RANDOM % 4)) -eq 4 ]]; then
		echo "$2"
	else
		echo "$1"
	fi
}

function generator {
	dd if=/dev/random of=/dev/stdout bs=3 count=1 2>/dev/null | base64
	# echo $(((($(date +%N) + $(date +%s)) * $RANDOM) % 10000))
}

# This controls (in seconds) when to switch to the next image
MINUTES=$((($RANDOM % 16) + 5))
SECNDS=$((($RANDOM % 21) + 50))
INTERVAL=$(($MINUTES * $SECNDS))
echo "Displaying a new wallpaper every $((INTERVAL / 60)) minutes and $((INTERVAL % 60)) seconds... ($INTERVAL)"
swww-daemon &
sleep 1

while true; do
	for disp in $(hyprctl monitors -j | jq -r '.[].name'); do
		img=$(find "$(fld $1 $2)" -type f | grep -v $3 | while read -r imgs; do echo "$(generator):$imgs"; done | sort -n | cut -d':' -f2- | head -n 1)
			export TRANSITION=$(ref)
			[[ $TRANSITION == "wipe" || $TRANSITION == "wave" ]] && export TRANSITION="$TRANSITION --transition-angle $((1 + $RANDOM % 360))"
			# echo "Outputting image $img on display $disp with transition $TRANSITION"
			ps aux | grep "Z:" | grep -v "grep" &>/dev/null || swww img -o "$disp" "$img" -t $TRANSITION && sleep 2
		done
	sleep $INTERVAL
	done
done
